<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_request_toolbar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible"
    >

    <TextView
        android:id="@+id/activity_request_toolbar_custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/activity_request_toolbar_avatar_holder"
        android:layout_toStartOf="@+id/activity_request_toolbar_avatar_holder"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:importantForAccessibility="no"
        tools:text="Theresa Black"
        />

    <TextView
        android:id="@+id/activity_request_toolbar_custom_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#ddffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_request_toolbar_custom_title"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/activity_request_toolbar_avatar_holder"
        android:layout_toStartOf="@+id/activity_request_toolbar_avatar_holder"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:importantForAccessibility="no"
        tools:text="Last reply 1:03pm"
        />

    <zendesk.support.request.ViewToolbarAvatar
        android:id="@+id/activity_request_toolbar_avatar_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:importantForAccessibility="no"
        />

</RelativeLayout>