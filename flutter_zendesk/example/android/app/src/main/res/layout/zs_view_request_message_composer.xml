<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:background="@drawable/zs_request_input_shadow"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:minHeight="@dimen/zs_request_message_composer_collapsed_height"
    android:padding="16dp">

    <EditText
        android:id="@+id/message_composer_input_text"
        style="@style/ZendeskSdkTheme.Light.Request.Message.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/zs_request_message_composer_collapsed_side_margin"
        android:layout_marginLeft="@dimen/zs_request_message_composer_collapsed_side_margin"
        android:layout_marginEnd="@dimen/zs_request_message_composer_collapsed_side_margin"
        android:layout_marginRight="@dimen/zs_request_message_composer_collapsed_side_margin"
        android:background="@color/zs_color_transparent"
        android:gravity="top|start"
        android:hint="@string/request_write_a_message"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine|textCapSentences"
        android:minHeight="@dimen/zs_request_message_composer_collapsed_height"
        android:paddingTop="@dimen/zs_request_message_composer_collapsed_top_padding"
        android:scrollbars="vertical"
        android:textColorHint="@color/zs_request_input_hint_color" />

    <zendesk.support.request.ViewAttachmentsIndicator
        android:id="@+id/message_composer_attachments_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/message_composer_send_btn"
        android:layout_width="@dimen/zs_request_message_composer_button_width"
        android:layout_height="@dimen/zs_request_message_composer_button_height"
        android:layout_gravity="bottom|end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@string/request_menu_button_label_send"
        android:focusable="true"
        android:padding="@dimen/zs_request_message_composer_send_button_padding"
        android:scaleX="@integer/zs_request_rtl_support_scale_x"
        app:srcCompat="@drawable/zs_request_ic_send"
        android:visibility="invisible"
        tools:visibility="visible" />

</FrameLayout>