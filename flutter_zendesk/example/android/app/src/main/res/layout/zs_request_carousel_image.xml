<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        style="@style/ZendeskSdkTheme.Light.Request.Attachment.Carousel.Item"
        android:id="@+id/request_attachment_image_carousel_container"
        android:layout_width="160dp"
        android:layout_height="95dp">

        <ImageView
            android:id="@+id/request_attachment_carousel_image"
            android:layout_width="match_parent"
            android:elevation="2dp"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            tools:ignore="ContentDescription,UnusedAttribute"/>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/request_attachment_carousel_remove"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end|top"
        android:layout_margin="4dp"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/zs_request_attachment_carousel_button"
        tools:ignore="UnusedAttribute"/>

</FrameLayout>