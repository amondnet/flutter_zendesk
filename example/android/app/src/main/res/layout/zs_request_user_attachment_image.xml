<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ZendeskSdkTheme.Light.Request.User.Attachment.Holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:importantForAccessibility="no">

    <androidx.cardview.widget.CardView
        android:id="@+id/request_user_message_attachment_container"
        style="@style/ZendeskSdkTheme.Light.Request.User.Attachment.Bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/request_user_message_attachment_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/request_user_attachment_image_status"
        style="@style/ZendeskSdkTheme.Light.Request.Message.Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_user_message_attachment_container"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        android:importantForAccessibility="no"
        tools:visibility="visible" />

</RelativeLayout>