<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <FrameLayout
        android:id="@+id/request_dialog_retry_retry"
        style="@style/ZendeskSdkTheme.Light.Request.Dialog.Retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:importantForAccessibility="no"
            android:scaleX="@integer/zs_request_rtl_support_scale_x"
            app:srcCompat="@drawable/zs_request_ic_retry"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/ZendeskSdkTheme.Light.Request.Dialog.Retry.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:gravity="start"
            android:text="@string/request_retry_dialog_retry" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/request_dialog_retry_delete"
        style="@style/ZendeskSdkTheme.Light.Request.Dialog.Retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/zs_request_ic_delete"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/ZendeskSdkTheme.Light.Request.Dialog.Retry.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:gravity="start"
            android:text="@string/request_retry_dialog_delete_message" />

    </FrameLayout>

</LinearLayout>